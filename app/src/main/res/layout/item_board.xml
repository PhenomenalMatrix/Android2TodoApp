<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/board_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/board_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/board_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board_iv"
        app:layout_constraintBottom_toTopOf="@id/board_subtitle_tv"
        tools:text="TITLE"
        android:textSize="30sp"
        android:layout_marginVertical="15dp"
        />

    <TextView
        android:id="@+id/board_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text=" SubTitle  SubTitle  SubTitle  SubTitle  SubTitle  SubTitle  SubTitle SubTitle  SubTitle  SubTitle  SubTitle SubTitle  SubTitle  SubTitle  SubTitle  SubTitle  SubTitle "
        app:layout_constraintTop_toBottomOf="@id/board_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>